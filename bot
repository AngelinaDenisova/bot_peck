def get_menu():
    response = requests.get(menu_url)
    response_json = response.json()
    names = []
    for position in response_json['positions']:
        names.append(position['name'])
    menu_prefix = 'Сегодня в меню: '
    menu_names = ', '.join(names)
    menu = menu_prefix + menu_names
    return menu
